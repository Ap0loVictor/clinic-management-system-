<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="clinicamed.controller.AtenderConsultaController"
            prefWidth="500.0" prefHeight="400.0">
    <children>
        <Label layoutX="180.0" layoutY="20.0" text="Atender Consulta">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Label layoutX="50.0" layoutY="70.0" text="Paciente:"/>
        <Label fx:id="labelPaciente" layoutX="150.0" layoutY="70.0"/>

        <Label layoutX="50.0" layoutY="110.0" text="Plano de Saúde:"/>
        <Label fx:id="labelPlano" layoutX="150.0" layoutY="110.0"/>

        <Label layoutX="50.0" layoutY="150.0" text="Relatório da Consulta:"/>
        <TextArea fx:id="campoRelatorio" layoutX="50.0" layoutY="180.0" prefWidth="400.0" prefHeight="120.0"/>

        <Button fx:id="botaoFinalizar" text="Finalizar Consulta" layoutX="180.0" layoutY="320.0" onAction="#handleFinalizarConsulta"/>
    </children>
</AnchorPane>
